@model NewsApplication.Models.News
@{
    ViewBag.Title = "AddMasterCategories";
  
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";   
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<style>
    .endBox {
        display: flex;
        justify-content: center;
        align-items: end;
    }

    .btn {
        width: 7rem;
    }

    .innerHtmlDiv {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .Headings1 {
        border-radius: 9px;
        display: flex;
        background: teal;
        color: #fff;
        font-size: 1.1rem;
        box-shadow: -2px 0px 9px 1px #008080;
    }

    .MainHeadin {
        text-align: center;
        padding: 0.4rem;
        font-style: italic;
        font-weight: 600;
